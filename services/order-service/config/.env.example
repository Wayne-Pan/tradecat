# ============================================================
# order-service 私有配置
# 公共配置（数据库、代理）在 config/.env
# ============================================================

# ---------- Binance API ----------
# 交易所 API 密钥（必填）
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# ---------- 交易模式 ----------
# 测试网模式: true=测试网 / false=主网（谨慎！）
TESTNET=true

# ---------- 做市参数 ----------
# 交易币对
SYMBOL=BTCUSDT
# 单边挂单数量
ORDER_AMOUNT=0.001
# 价差百分比
SPREAD_PERCENT=0.1
# 订单刷新间隔（秒）
REFRESH_INTERVAL=5

# ---------- 风控 ----------
# 最大持仓量
MAX_POSITION=0.1
# 单日最大亏损（USDT）
MAX_DAILY_LOSS=100
# 紧急停止开关
EMERGENCY_STOP=false
